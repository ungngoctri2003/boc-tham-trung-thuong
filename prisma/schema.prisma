generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SpinResult {
  id        Int      @id @default(autoincrement())
  email     String
  amount    Int      // VND: 500000, 200000, 100000
  spinTime  DateTime @map("spin_time")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("spin_results")
}

// Pool 45 giải: gán lần lượt cho từng lượt quay (15x100k, 25x200k, 5x500k đã shuffle)
model PrizePool {
  id             Int       @id @default(autoincrement())
  amount         Int       // VND
  segmentIndex   Int       @map("segment_index")
  assignedEmail  String?   @map("assigned_email")
  assignedAt     DateTime? @map("assigned_at")

  @@map("prize_pool")
}
